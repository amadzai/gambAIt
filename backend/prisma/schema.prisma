generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Color {
  WHITE
  BLACK
}

enum GameStatus {
  ACTIVE
  CHECKMATE
  STALEMATE
  DRAW
  RESIGNED
}

model ChessGame {
  id     String     @id @default(cuid())
  fen    String
  pgn    String     @default("")
  turn   Color
  status GameStatus

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Playstyle {
  AGGRESSIVE
  DEFENSIVE
  POSITIONAL
}

model Agent {
  id           String    @id @default(cuid())
  name         String
  playstyle    Playstyle
  opening      String?
  personality  String?
  profileImage String?
  elo          Int       @default(1000)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
